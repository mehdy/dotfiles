	email = mehdy.khoshnoody@gmail.com
[commit]
	gpgsign = true

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only
[add.interactive]
    useBuiltin = false

[delta]
    navigate = true
    light = false
    line-numbers = true

[merge]
    conflictstyle = zdiff3

[diff]
    colorMoved = default
	algorithm = histogram

[push]
	autoSetupRemote = true

[pull]
	rebase = true

[url "ssh://git@github.com/"]
	insteadOf = https://github.com/
