	name = Mehdi Khoshnoodi
	email = mehdy.khoshnoody@gmail.com
	signingkey = 16D507B0F1A4B37A

[commit]
	gpgsign = true

[core]
	pager = delta

[interactive]
	diffFilter = delta --color-only

[add.interactive]
	useBuiltin = false

[delta]
	navigate = true
	light = false
	line-numbers = true

[merge]
	conflictstyle = zdiff3

[diff]
	colorMoved = default
	algorithm = histogram

[push]
	autoSetupRemote = true

[pull]
	rebase = true

[remote "origin"]
	prune = true

[url "ssh://git@github.com/"]
	insteadOf = https://github.com/

[includeIf "gitdir:~/Projects/github.com/epidemicsound/"]
	path = ~/Projects/github.com/epidemicsound/.gitconfig
